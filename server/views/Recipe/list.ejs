<%- include('./Partials/header.ejs') %>
<%- include('./Partials/main_nav.ejs') %>
<!--Recipe Database-->
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><%= title %></h1>
            <br>
            <a href="/recipeslist/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add Recipe
            </a>
            <table class="table table-bordered table-striped table-hover">
                <tr class="d-flex">
                    <th class="text-center col-2">Title</th>
                    <th class="text-center col-2">Ingredients</th>
                    <th class="text-center col-1">Steps</th>
                    <th class="col-4">Description</th>
                </tr>
                <% for(let count=0;count<RecipeList.length;count++) { %>
                <tr class="d-flex">
                    <td class="text-center col-2"><%= RecipeList[count].Title %></td>
                    <td class="text-center col-2"><%= RecipeList[count].Ingredients %></td>
                    <td class="text-center col-1"><%=RecipeList[count].Steps%></td>
                    <td class="col-4"><%= RecipeList[count].Description %> </td>
                    <td class="text-center col-1">
                        <a href="/recipeslist/edit/<%= RecipeList[count]._id%>"
                            class="btn btn-primary btn-sm">
                        <i class="fas fa-pencil-alt"></i>Edit
                    </a>
                    </td>
                    <td class="text-center col-1">
                        <a href="/recipeslist/delete/<%= RecipeList[count]._id%>"
                            class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i>Delete
                    </a>
                    </td>
                </tr>    
                    <%} %>
            </table>
        </div>
    </div>
</main>
