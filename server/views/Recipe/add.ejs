<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="titleTextField">Recipe Title</label>
                    <input type="text" class="form-control" id="titleTextField" placeholder="Enter the Recipe Title" name="Title" required>
                </div>
                <div class="form-group">
                    <label for="ingredientsTextField">Recipe Ingredients</label>
                    <input type="text" class="form-control" id="ingredientsTextField" placeholder="Enter the Recipe Ingredients" name="Ingredients" required>
                </div>
                <div class="form-group">
                    <label for="stepsTextField">Steps</label>
                    <input type="text" class="form-control" id="stepsTextField" placeholder="Enter the Steps" name="Steps" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Recipe Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="enter the Book Description" name="Description" required></textarea>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>